    <li data-row="2" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="Weather_Humidity" data-view="Ohhumidity" data-title="Luftfeuchte Aussen" data-device="Weather_Humidity"></div>
    </li>

    <li data-row="2" data-col="7" data-sizex="2" data-sizey="1">
      <div data-id="Light_GF_Hallway" data-view="Ohdimmer" data-title="Hallway" data-device="Light_GF_Hallway"></div>
