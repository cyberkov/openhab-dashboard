    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="Weather_Temperature" data-view="Ohtemp" data-title="Outside" data-device="Weather_Temperature"></div>
    </li>

    <li data-row="1" data-col="6" data-sizex="2" data-sizey="1">
      <div data-id="Light_FF_Landing_Spots" data-view="Ohdimmer" data-title="Upstairs Landing" data-device="Light_FF_Landing_Spots"></div>
    </li>

    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
